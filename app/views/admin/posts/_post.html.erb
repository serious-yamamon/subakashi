<tr data-href="<%= edit_admin_post_path(post) %>" class="post-item">
  <td class="post-data"><%= image_tag post.image.url(:thumb_mini), class: "post-item-image" %></td>
  <td class="post-data"><%= truncate(post.title, length: 15) %></td>
  <td class="post-data"><%= post.series.name %></td>
  <td class="post-data"><%= post.writer.name %></td>
  <td class="post-data"><%= post.category.name %></td>
  <td class="post-data"><%= status(post) %></td>
  <td class="post-data">
    <%= link_to admin_post_path(post.slug) do %><%= icon('far','eye') %><% end %>
  </td>
  <td class="post-data"><%= link_to edit_admin_post_path(post.slug) do %><%= icon('fas','edit') %><% end %> </td>
  <td class="post-data post-delete"><%= link_to admin_post_path(post), method: :delete, data: {confirm: "削除された記事は復元できません．削除しますか？"} do %><%= icon('fas','times')  %><% end %></td>
</tr>
