<% set_meta_tags noindex: true %>
<script>
  $(function() {
    $("html").addClass("admin-wrap");
    $("body").addClass("admin-wrap");
    $(".wrap").addClass("admin-wrap");
  })
</script>
<div class="admin">
  <%= render 'shared/admin_side' %>
  <div class="admin-main">
    <div class="admin-main--header">
      <h2>ライター</h2>
    </div>
    <div class="admin-main--body">
      <div class="form">
        <div class="form-body">
          <% @writers.each do |writer| %>
          <div class="writer-info">
            <h3 class="writer-info--name">
              <%= writer.name %>
            </h3>
            <h4 class="writer-info--element">肩書き</h4>
            <p>
              <%= writer.status %>
            </p>
            <h4 class="writer-info--element">TwitterURL</h4>
            <p>
              <%= writer.twitter %>
            </p>
            <h4 class="writer-info--element">InstagramURL</h4>
            <p>
              <%= writer.instagram %>
            </p>
            <h4 class="writer-info--element">YoutubeURL</h4>
            <p>
              <%= writer.youtube %>
            </p>
            <h4 class="writer-info--element">概略</h4>
            <p>
              <%= writer.about %>
            </p>
            <h4 class="writer-info--element">詳細説明</h4>
            <p>
              <%= writer.description %>
            </p>
              <%= link_to "編集", edit_admin_writer_path(writer.id), class: "writer-info" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
